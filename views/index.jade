doctype html
html(lang="en")
head
  title= title
body
  include ./includes/navbar.jade
  div.container.center
    div#status-message
    h1= title
    div#connection-count
    h4= 'Create a new poll below:'
    form(action="/polls" method="post" name= 'poll')
      input(type='text'
            id='poll-title'
            name='poll[title]'
            placeholder='title'
            )
      input(type='text'
            class='poll-responses'
            name='poll[responses][]'
            placeholder='responses')
      input(type='text'
            class='poll-responses'
            name='poll[responses][]'
            placeholder='responses')

      div#poll-form
      a(id= 'add-response'
        class= 'btn red') Add another response

      br
      br

      div#timeout
        h5 When would you like your poll to close?
          .input-field Date
            input.datepicker.center(name= 'poll[timeout-date]' type='date' class='timeout-date')
          .input-field Time
            input.datepicker.center(name= 'poll[timeout-time]' type='time' class='timeout-time')

      button(id= 'create-poll'
             class= 'btn') Create Poll

    script(src="//code.jquery.com/jquery-1.12.0.min.js")
    link(href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css', rel='stylesheet')
    script(src="/socket.io/socket.io.js")
    script(src="/client.js")
